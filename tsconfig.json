{
  "root": true,
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "example"]
}
